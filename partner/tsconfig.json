{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "shared/*": ["../shared/*"]
    },
    "composite": true,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "include": [
    "src",
    "../shared"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "admin",
    "src"
  ]
}
