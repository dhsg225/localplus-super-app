{
  "name": "localplus-super-app",
  "version": "0.31.0",
  "description": "LocalPlus Super App - LDP Lifestyle Ecosystem for Thailand cities and districts",
  "private": true,
  "homepage": "https://www.localplus.city",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "vite",
    "build": "pnpm --parallel build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:health": "vitest tests/healthCheck.test.ts",
    "test:validation": "vitest tests/validation.test.ts",
    "test:hooks": "vitest tests/preCommitHooks.test.ts",
    "test:integration": "vitest tests/ --run",
    "test:safeguards": "node scripts/run-tests.js",
    "type-check": "tsc --noEmit",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "news-server": "node server/places-proxy.js",
    "dev:full": "concurrently \"npm run news-server\" \"npm run dev\"",
    "dev:admin": "cd admin && npm run dev",
    "dev:partner": "cd partner && npm run dev",
    "deploy": "npm run version:patch && npm run build && git add package.json && git commit -m \"Version bump to $(node -p 'require(\"./package.json\").version')\" && git push && npx vercel --prod",
    "prepare": "husky && husky install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.3",
    "@types/google.maps": "^3.58.1",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.303.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.21.0",
    "recharts": "^3.1.0",
    "tailwind-merge": "^2.2.0",
    "uuid": "^11.1.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^0.17.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "localplus",
    "thailand",
    "lifestyle",
    "restaurants",
    "events",
    "services",
    "mobile-first",
    "pwa"
  ],
  "author": "LDP - Local Digital Publication",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
