{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/core/*": [
        "./src/core/*"
      ],
      "@/modules/*": [
        "./src/modules/*"
      ],
      "@/ui-components/*": [
        "./src/ui-components/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@api-integrations/*": [
        "./src/api-integrations/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    }
  },
  "include": [
    "src",
    "shared",
    "admin/src",
    "partner/src"
  ]
}
